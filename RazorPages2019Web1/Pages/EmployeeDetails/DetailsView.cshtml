@page
@model RazorPages2019Web1.Pages.EmployeeDetails.DetailsViewModel
@{
	ViewData["Title"] = "DetailsView";
	var photopath = "~/images/" + (Model.EmployeeDetail.Photopath?? "noimage.jpg");
}

<h1>DetailsView</h1>

<div class="row justify-content-center m-3">
	<div class="col-sm-8">
		<div class="card">
			<div class="card-header">
				<h1>@Model.EmployeeDetail.Name</h1>
			</div>

			<div class="card-body text-center">
				<img class="card-img-top" src="@photopath" asp-append-version="true" />

				<h4>Employee ID : @Model.EmployeeDetail.ID</h4>
				<h4>Email : @Model.EmployeeDetail.Email</h4>
				<h4>Department : @Model.EmployeeDetail.Department</h4>

			</div>
			<div class="card-footer text-center">
				<a asp-page="index"
				   class="btn btn-primary">Back</a>
				<a href="#" class="btn btn-primary">Edit</a>
				<a href="#" class="btn btn-danger">Delete</a>
			</div>
		</div>
	</div>
</div>