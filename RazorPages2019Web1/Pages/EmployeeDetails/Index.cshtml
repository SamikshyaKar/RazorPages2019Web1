@page
@model RazorPages2019Web1.Pages.EmployeeDetails.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1>EmployeeDetails</h1>
@*<h3>@Model.EmployeeDetail.Count()</h3>*@

<style>
	.btn {

		width:75px;
	}
</style>

<div class="card-deck">

	@foreach (var employee in Model.EmployeeDetail)
	{
		var photopath = "~/images/" + (employee.Photopath ?? "noimage.jpg");
		<div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
			<div class="card-header">
				<h3>@employee.Name</h3>
			</div>

			<img class="card-img-top imageThumbnail1" style="height:200px"  src="@photopath"
				 asp-append-version="true" />

			<div class="card-footer text-center">
				@*<a href="#" class="btn btn-primary m-1">View</a>*@
				<a asp-page="/EmployeeDetails/DetailsView" asp-route-ID="@employee.ID"
				   class="btn btn-primary m-1">View</a>
				<a href="#" class="btn btn-primary m-1">Edit</a>
				<a href="#" class="btn btn-danger m-1">Delete</a>
			</div>
		</div>
	}

</div>

